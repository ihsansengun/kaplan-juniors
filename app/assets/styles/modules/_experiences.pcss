.experiences {
  position: relative;
  width: 100%;
  clear: both;
  background: url("../../assets/images/jr-hub--bottom-bg-lg.jpg");
  background-size: cover;
  padding: 40px 15px;

  @mixin atMedium {
    padding: 80px 15px;

  }

  &__inner {
    width: 100%;
    z-index: 10;
    .wrapper {
      position: relative;
      z-index: 10;

    }
  }

  h1 {
    font-size: 24px;
    color: white;
    margin-top: 10px;
    text-align: center;

    @mixin atMedium {
      font-size: 36px;

    }

  }

  p {
    font-size: 18px;
    line-height: 140%;
    color: white;
    text-align: center;
  }

  ul {
    margin: 40px 0 0 0;
    padding: 0;
    list-style: none;
    float: left;
    width: 100%;
  }

  li {
    lost-column: 1/1;
    background: rgba(255, 255, 255, 0.5);
    border: 2px solid white;
    padding: 60px 10px 30px 10px;
    margin-bottom: 20px;

    @mixin atMedium {
      lost-column: 1/3;
      margin-bottom: 0;
      min-height: 330px;

    }


    img {
      display: block;
      width: 100%;
      max-width: 137px;
      margin: 0 auto;

    }

    a {
      text-decoration: none;
    }

    p {
      font-size: 16px;
      text-align: center;
      color: #202020;
      font-weight: bold;
      margin-top: 20px;
    }

    span.plus {
      position: relative;
      display: block;
      width: 48px;
      height: 48px;
      background: #00a4d9;
      border-radius: 50%;
      margin: 30px auto 10px auto;

      &:after {
        content: "+";
        position: absolute;
        @mixin centered;
        font-size: 30px;
        color: white;
      }
    }
  }

  &__modal-content {
    width: 100%;
    text-align: center;

    h5 {
      font-size: 16px;
      color: #202020;
      margin-top: 10px;
      text-align: center;
    }
    p {

      font-size: 14px;
      text-align: center;
      color: #202020;
      margin-top: 10px;

    }

    img {
      display: block;
      width: 100%;
      max-width: 137px;
      margin: 0 auto;

    }

  }


  .modal {
    text-align: center;
    padding: 0!important;
  }

  .modal:before {
    content: '';
    display: inline-block;
    height: 100%;
    vertical-align: middle;
    margin-right: -4px;
  }

  .modal-dialog {
    display: inline-block;
    text-align: left;
    vertical-align: middle;
  }

}

